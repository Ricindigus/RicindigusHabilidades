<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.gob.inei.encuestahabilidades.fragments.CaratulaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/caratula_loc"
        android:background="@color/colorPrimary"
        android:textColor="@color/icons"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="@string/caratula_loc_ubicacion_geo"
            android:background="@drawable/borde_layout_preguntas"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/fab_margin">
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_geo_departamento"/>
                <EditText
                    android:id="@+id/caratula_txtDepartamento"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_geo_provincia"/>
                <EditText
                    android:id="@+id/caratula_txtProvincia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_geo_distrito"/>
                <EditText
                    android:id="@+id/caratula_txtDistrito"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="@string/caratula_loc_coordenadas"
            android:background="@drawable/borde_layout_preguntas"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/fab_margin">
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_coordenadas_gps_latitud"/>
                <EditText
                    android:id="@+id/caratula_txtLatitud"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_coordenadas_gps_altitud"/>
                <EditText
                    android:id="@+id/caratula_txtAltitud"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_coordenadas_gps_longitud"/>
                <EditText
                    android:id="@+id/caratula_txtLongitud"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="@string/caratula_loc_ubicacion_muestral"
            android:background="@drawable/borde_layout_preguntas"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin">
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_muestral_sector"/>
                <EditText
                    android:id="@+id/caratula_txtSector"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_muestral_area"/>
                <EditText
                    android:id="@+id/caratula_txtArea"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_muestral_zona"/>
                <EditText
                    android:id="@+id/caratula_txtZona"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_muestral_manzana"/>
                <EditText
                    android:id="@+id/caratula_txtManzana"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/icons"
                    android:gravity="center_vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:text="@string/caratula_loc_ubicacion_muestral_frente"/>
                <EditText
                    android:id="@+id/caratula_txtFrente"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <TextView
                android:textColor="@color/icons"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/fab_margin"
                android:text="@string/caratula_loc_direccion"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/caratula_txtDireccion"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5dp"
                android:background="@color/accent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_npuerta"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_block"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_interior"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_piso" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_manzana"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_lote"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:text="@string/caratula_loc_direccion_km"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/caratula_datos"
        android:background="@color/colorPrimary"
        android:textColor="@color/icons"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/fab_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fab_margin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <View
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="@color/icons"
                android:paddingLeft="@dimen/fab_margin"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="DNI"
                android:gravity="center_vertical"
                android:background="@color/accent"
                />
            <TextView
                android:textColor="@color/icons"
                android:gravity="center_vertical"
                android:background="@color/accent"
                android:paddingLeft="@dimen/fab_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/caratula_datos_nombres"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/icons"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/fab_margin"
                android:text="@string/caratula_datos_operador"/>
            <EditText
                android:id="@+id/caratula_txtDNIOperador"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:background="@drawable/cajas_de_texto" />
            <EditText
                android:id="@+id/caratula_txtNombreOperador"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/icons"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/fab_margin"
                android:text="@string/caratula_datos_jefe"/>
            <EditText
                android:id="@+id/caratula_txtDNIJEfe"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:background="@drawable/cajas_de_texto" />
            <EditText
                android:id="@+id/caratula_txtNombreJefe"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/icons"
                android:gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/fab_margin"
                android:text="@string/caratula_datos_supervisor"/>
            <EditText
                android:id="@+id/caratula_txtDNISupervisor"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:background="@drawable/cajas_de_texto" />
            <EditText
                android:id="@+id/caratula_txtNombreSupervisor"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
