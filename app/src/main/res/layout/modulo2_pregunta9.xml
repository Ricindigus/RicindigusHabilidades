<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p9"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p9_sp1"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:paddingLeft="@dimen/margin5dp"
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p9_sp2"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p9_sp3"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/accent">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mod2_p9_sp4"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:paddingLeft="@dimen/margin5dp"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/especifique"
                    android:background="@drawable/caja_texto_redonda"/>
            </LinearLayout>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/mod2_p9_sp5"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/total"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/primary_text"/>
            <TextView
                android:layout_width="100dp"
                android:paddingLeft="@dimen/margin5dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>