<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p22"
        android:layout_marginBottom="@dimen/fab_margin" />
    <LinearLayout
        android:layout_marginTop="@dimen/margin10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin5dp">
            <TextView
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:text="Régimen Laboral Especial"
                android:background="@drawable/cabecera"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:background="@drawable/cabecera"
                android:text="¿Para que porcentaje de sus trabajadores?"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod2_p22_sp1"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod2_p22_sp2"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod2_p22_sp3"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod2_p22_sp4"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <CheckBox
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10dp"
                android:text="@string/mod2_p22_sp5"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mod2_p22_sp6"/>
                <EditText
                    android:paddingLeft="@dimen/margin5dp"
                    android:hint="@string/especifique"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:maxLength="200"
                    android:background="@drawable/cajas_de_texto"
                    />
            </LinearLayout>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin15dp"
                android:inputType="numberPassword"
                android:maxLength="3"
                android:background="@drawable/caja_texto_redonda"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>