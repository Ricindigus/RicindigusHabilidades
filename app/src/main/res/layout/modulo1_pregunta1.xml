<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modulo1_pregunta1"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/cajas_de_texto"
        android:layout_marginBottom="@dimen/margin10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codigo_ciiu"
            android:textColor="@color/primary_text"
            android:layout_marginRight="@dimen/margin15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"/>
    </LinearLayout>
</LinearLayout>