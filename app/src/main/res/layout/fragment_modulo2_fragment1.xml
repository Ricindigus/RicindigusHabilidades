<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.gob.inei.encuestahabilidades.fragments.Modulo2Fragment1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modulo2_nombre"
        android:background="@color/colorPrimary"
        android:textColor="@color/icons"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/fab_margin"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mismo_informante"/>
        <TextView
            android:textColor="@color/icons"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="@dimen/margin5dp"
            android:text="@string/nombre_informante"/>
        <EditText
            android:id="@+id/modulo1_txtInformante"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <TextView
            android:textColor="@color/icons"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="@dimen/margin5dp"
            android:text="@string/cargo_informante"/>
        <Spinner
            android:id="@+id/modulo1_spCargoInformante"
            android:background="@drawable/cajas_de_texto"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p1"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:padding="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ntrab"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin15dp"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p2"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:padding="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ntrab_mujeres"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin15dp"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p3"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:padding="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ntrab_tiempoparcial"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin15dp"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p4"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:padding="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ntrab_cont_temp"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin15dp"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/margin15dp"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mod2_p5"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin5dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/mod2_p5_sp1"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin5dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/mod2_p5_sp2"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin5dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/mod2_p5_sp3"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin5dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/mod2_p5_sp4"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin5dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/no_sabe"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/accent"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:layout_marginBottom="@dimen/margin10dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="@string/total"
                    android:textColor="@color/icons"
                    android:textStyle="bold"
                    android:padding="@dimen/margin10dp"
                    android:background="@color/primary_text"/>
                <EditText
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cajas_de_texto"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
