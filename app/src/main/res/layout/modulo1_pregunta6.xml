<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mod1_p6_lyt"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/fab_margin"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/mod1_p6_txtPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modulo1_pregunta6"
        android:layout_marginBottom="@dimen/fab_margin" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Buscador:"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <AutoCompleteTextView
                android:inputType="text"
                android:id="@+id/mod1_p6_autotxtPaises"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:completionThreshold="1"
                android:paddingLeft="@dimen/margin5dp"
                android:background="@drawable/cajas_de_texto"/>
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Escriba un país. Por ejemplo: Argentina"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="País Seleccionado"
            android:layout_margin="@dimen/margin10dp"/>
        <TextView
            android:background="@drawable/border_layout_subpreguntas"
            android:id="@+id/mod1_p6_txtPaisSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin10dp"
            android:text="País Seleccionado"/>
    </LinearLayout>
</LinearLayout>