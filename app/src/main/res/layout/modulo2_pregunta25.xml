<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/fab_margin"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p25"
        android:layout_marginBottom="@dimen/fab_margin" />
    <RadioGroup
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin10dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SI"
            android:layout_marginRight="30dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"/>
    </RadioGroup>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin5dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="160dp"
                android:paddingLeft="@dimen/margin5dp"
                android:layout_height="match_parent"
                android:text="¿Cuántos en total?"
                android:textColor="@color/icons"
                android:background="@color/accent"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="numberPassword"
                android:maxLength="5"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin5dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="160dp"
                android:paddingLeft="@dimen/margin5dp"
                android:layout_height="match_parent"
                android:text="¿Cuántas hombres?"
                android:textColor="@color/icons"
                android:background="@color/accent"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="numberPassword"
                android:maxLength="5"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin5dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="160dp"
                android:paddingLeft="@dimen/margin5dp"
                android:layout_height="match_parent"
                android:text="¿Cuántas mujeres?"
                android:textColor="@color/icons"
                android:background="@color/accent"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="5"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>