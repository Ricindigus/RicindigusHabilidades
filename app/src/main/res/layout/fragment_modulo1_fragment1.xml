<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.gob.inei.encuestahabilidades.fragments.Modulo1Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modulo1_nombre"
        android:background="@color/colorPrimary"
        android:textColor="@color/icons"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/fab_margin"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mismo_informante"/>
        <TextView
            android:textColor="@color/icons"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="@dimen/margin5dp"
            android:text="@string/nombre_informante"/>
        <EditText
            android:id="@+id/modulo1_txtInformante"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <TextView
            android:textColor="@color/icons"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:padding="@dimen/margin5dp"
            android:text="@string/cargo_informante"/>
        <Spinner
            android:id="@+id/modulo1_spCargoInformante"
            android:background="@drawable/cajas_de_texto"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modulo1_pregunta1"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:layout_marginBottom="@dimen/margin10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codigo_ciiu"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modulo1_pregunta2"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/cajas_de_texto"
            android:layout_marginBottom="@dimen/margin10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codigo_ciiu"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modulo1_pregunta3"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta2"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta3"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta4"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta5"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/modulo1_pregunta3_subpregunta6"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/otro"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/especifique"
                android:textColor="@color/primary_text"
                android:layout_marginRight="@dimen/margin10dp"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/borde_layout_preguntas">
        <TextView
            android:text="@string/modulo1_pregunta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modulo1_pregunta4_subpregunta1"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modulo1_pregunta4_subpregunta2"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modulo1_pregunta4_subpregunta3"/>
        </RadioGroup>
    </LinearLayout>



</LinearLayout>
