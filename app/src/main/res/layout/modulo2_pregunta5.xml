<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:padding="@dimen/margin15dp"
    android:background="@drawable/borde_layout_preguntas"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mod2_p5"
        android:layout_marginBottom="@dimen/fab_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/mod2_p5_sp1"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/mod2_p5_sp2"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/mod2_p5_sp3"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/mod2_p5_sp4"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin5dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/no_sabe"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/accent"/>
            <EditText
                android:inputType="number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10dp"
            android:layout_marginRight="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="@string/total"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:padding="@dimen/margin10dp"
                android:background="@color/primary_text"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cajas_de_texto"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>