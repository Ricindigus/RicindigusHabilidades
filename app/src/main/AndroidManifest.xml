<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.gob.inei.encuestahabilidades">

    <application
        android:allowBackup="true"
        android:icon="@drawable/enhatrape_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/enhatrape_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="screenSize|orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.MarcoActivity"
            android:configChanges="screenSize|orientation|keyboardHidden" />
        <activity
            android:name=".activities.EncuestaActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.EnhatrapeActivity"
            android:label="@string/title_activity_enhatrape"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>